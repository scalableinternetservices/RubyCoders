 <p id="notice"><%= notice %></p>
<% if reviewer_signed_in? %>
<h1>Listing Student Applications</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Gpa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_applications.each do |student_application| %>
      <tr>
        <td><%= student_application.student_id %></td>
        <td><%= student_application.name %></td>
        <td><%= student_application.phone %></td>
        <td><%= student_application.email_id %></td>
        <td><%= student_application.gpa %></td>
        <td><%= link_to 'Show', student_application %></td>
        <!-- <td><%= link_to 'Edit', edit_student_application_path(student_application) %></td> -->
        <!-- <td><%= link_to 'Destroy', student_application, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<ul>
  <h2>Reviewer Zone - Student is not authorized to view this</h2>
<li><%= link_to '<button type="button">Review Applications </button>'.html_safe, new_reviewer_session_path %></li>
</ul>
<% end %>
<br>
