<h2> View Statistics </h2>


<% if show_map %>
<% @student_applications.each do |student_application| %>


<!--<strong>Student Name:</strong>	<%= student_application.name %><br />-->
<!DOCTYPE html> 
<html> 
<head> 
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" /> 
<style type="text/css"> 
  html { height: 100% } 
  body { height: 100%; margin: 0px; padding: 0px } 
  #map_canvas { height: 100% } 
</style> 
<script type="text/javascript" 
    src="http://maps.google.com/maps/api/js?sensor=false"> 
</script> 
<script type="text/javascript"> 
  function initialize() {  	
    var latlng = new google.maps.LatLng(<%= student_application.latitude %>,<%= student_application.longitude %>); 
    var myOptions = { 
      zoom: 14, // default is 8  
      center: latlng, 
      mapTypeId: google.maps.MapTypeId.ROADMAP 
    }; 
    var map = new google.maps.Map(document.getElementById("map_canvas"), 
        myOptions); 
  } 

</script> 
</head> 
<body onload="initialize()"> 
  <div id="map_canvas" style="width:60%; height:60%"></div> 
</body> 
</html>

