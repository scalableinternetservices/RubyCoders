<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="ec2-52-25-252-229.us-west-2.compute.amazonaws.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
          <thinktime value="2" random="true"></thinktime>

    <!-- visit the Reviewer sign in form  -->
    <request>
      <http url='/reviewers/sign_up' version='1.1' method='GET'></http>
    </request>

    <!-- wait for up to 2 seconds, user is filling out new community form -->
    <thinktime value="2" random="true"></thinktime>

    <!-- create a random number to make a unique community name -->
    <setdynvars sourcetype="random_number" start="1000" end="9999999">
      <var name="random_reviewer_email" />
    </setdynvars>
<request subst="true">
       <dyn_variable name="created_reviewer_url" re="[Ll]ocation: (http://.*)\r"/>
      <dyn_variable name="created_reviewer_id" re="[Ll]ocation: http://.*/reviewers/(.*)\r"/>
              <http
        url='/reviewers'
        version='1.1'
        method='POST'
        contents='reviewer%5Bemail%5D=reviewer_name_%%_random_reviewer_email%%%40gmail.com&amp;reviewer%5Bpassword%5D=helloworlde&amp;reviewer%5Bpassword_confirmation%5D=helloworlde&amp;commit=Sign+up'>
      </http>
    </request>
    <!-- post to /communities to create a community.
               remember the url of the created community so we can delete it later -->

    <thinktime value="2" random="true"></thinktime>

