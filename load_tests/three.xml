<options>
  <!-- Set connection timeout to 2 seconds -->
  <option name="glocal_ack_timeout" value="2000"></option>

  <option type="ts_http" name="user_agent">
    <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
  </option>
</options>

<sessions>
  <session name="http-example" probability="100" type="ts_http">

    <!-- start out at the dashboard. -->
    <request>
      <http url='/' version='1.1' method='GET'></http>
    </request>

    <!-- wait for up to 2 seconds, user is looking at posts -->
    <thinktime value="2" random="true"></thinktime>

    <!-- visit the sign_up form, as a user would do.  -->
       <request>
      <http url='/students/sign_up' version='1.1' method='GET'></http>
    </request>

<!-- wait for up to 2 seconds, user is filling out new student form -->
    <thinktime value="2" random="true"></thinktime>

    <!-- create a random number to make a unique email id for each student -->
    <setdynvars sourcetype="random_number" start="1000" end="9999999">
      <var name="random_student_email" />
    </setdynvars>

      <!-- post to /communities to create a community.
                 remember the url of the created community so we can delete it later -->
      <request subst="true">
        <dyn_variable name="created_student_url" re="[Ll]ocation: (http://.*)\r"/>
        <dyn_variable name="created_student_id" re="[Ll]ocation: http://.*/welcome/index/(.*)\r"/>
        <http
          url='/students'
          version='1.1'
          method='POST'
          contents='student%5Bemail%5D=student_name_%%_random_student_email%%%40gmail.com&amp;student%5Bpassword%5D=helloworlde&amp;student%5Bpassword_confirmation%5D=helloworlde&amp;commit=Sign+up'>

        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <!-- Open th eview statistics page -->
      <request>
              <http url="/show_map" version ="1.1" method="GET">
              </http>
      </request>

      <!-- Creating new application -->
      <request>
          <http url="/student_applications/new" version='1.1' method='GET'>

          </http>
      </request>

      <!-- Submitting a new student applictaion-->

      <setdynvars sourcetype="eval"
            code='fun({Pid,DynVars})-> [[13, 10]] end.'>
        <var name="nl" />
      </setdynvars>

      <setdynvars sourcetype="eval"
            code='fun({Pid,DynVars})->
                    {ok, Bin} = file:read_file("sample.pdf"),
                    Bin
                  end.'>
        <var name="attached_file" />
      </setdynvars>

      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_application_name" />
      </setdynvars>

      <request subst="true">
        <http
          url='/student_applications/%%_created_student_id%%'
          version='1.1'
          method='POST'
          content_type='multipart/form-data; boundary=----FormBoundary'
          contents='------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[name]"%%_nl%%%%_nl%%Application_name_%%_random_application_name%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[dob(1i)]"2011------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[dob(2i)]"5------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[dob(3i)]"24------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[phone]"3107654321------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[email_id]"%%_nl%%%%_nl%%abc@gmail.com------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[gpa]"3.7------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[address]"%%_nl%%%%_nl%%Street_address------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[city]"Mumbai------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[state]"MH------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[country]"India------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[resume]"; filename="sample.pdf"%%_nl%%Content-Type: application/pdf%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[sop]"; filename="sample.pdf"%%_nl%%Content-Type: application/pdf%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="student_application[lor]"; filename="sample.pdf"%%_nl%%Content-Type: application/pdf%%_nl%%%%_nl%%%%_attached_file%%%%_nl%%------FormBoundary%%_nl%%Content-Disposition: form-data; name="commit"%%_nl%%%%_nl%%Submit%%_nl%%------FormBoundary--%%_nl%%%%_nl%%'>
      </http>
      </request>

         </session>
  </sessions>

